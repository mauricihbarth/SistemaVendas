@model RelatorioModel

<h2>Vendas</h2>

<form asp-controller="Relatorio" asp-action="Vendas" lang="pt-br">

    <div class="form-group">
        <label>Período</label>
        <input asp-for="DataDe" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="DataAte" type="date" class="form-control" placeholder="dd-mm-yyyy"/>
    </div>

    <button type="submit" class="btn btn-block btn-success">Pesquisar</button>
    


</form>



<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Vendedor</th>
            <th>Cliente</th>
            <th>Total</th>
        </tr>
    </thead>

    <tbody>
        @{

            try
            {
                foreach (var item in (List<VendaModel>)ViewBag.ListaVendas)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Data</td>
                        <td>@item.Vendedor_Id</td>
                        <td>@item.Cliente_Id</td>
                        <td>R$ @item.Total</td>
                    </tr>
                }
            }
            catch {}
        }
    </tbody>
</table>

<br />
